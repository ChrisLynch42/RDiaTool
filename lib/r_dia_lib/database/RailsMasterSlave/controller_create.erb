    @<%= template_variables['single'] %> = <%= template_variables['cap_single'] %>.new(params[:<%= template_variables['single'] %>])

    respond_to do |format|
      if @<%= template_variables['single'] %>.save
        format.html { redirect_to <%= template_variables['single'] %>_path(@<%= template_variables['single'] %>, :letter => get_first_letter(@<%= template_variables['single'] %>) ), notice: '<%= template_variables['cap_single'] %> was successfully created.' }
        format.json { render json: @<%= template_variables['single'] %>, status: :created, location: @<%= template_variables['single'] %> }
